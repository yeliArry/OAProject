<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.synergy.mapper.UsageLogMapper">
    
    <resultMap type="UsageLog" id="OaUsageResult">
        <result property="logId"    column="usage_id"    />
        <result property="blockId"    column="block_id"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="createdBy"    column="created_by"    />
        <result property="createdTime"    column="created_time"    />
        <result property="updatedBy"    column="updated_by"    />
        <result property="updatedTime"    column="updated_time"    />
        <association property="oaReferenceBlock" javaType="OaReferenceBlock">
            <id property="blockId" column="block_id"/>
            <result property="blockName" column="block_Name"/>
            <result property="unitType" column="unit_type"/>
            <result property="storageId" column="storage_id"/>
            <result property="userId" column="user_id"/>
            <result property="creationTime" column="creation_time"/>
            <result property="blockStatus" column="block_status"/>
            <result property="usageState" column="usage_state"/>
            <association property="sysUser" javaType="SysUser">
                <id property="userId" column="user_Id"/>
                <result property="userName" column="user_Name"/>
            </association>
        </association>
    </resultMap>

    <select id="selctUsageLogList" resultMap="OaUsageResult">
        select ou.usage_id as ou_usageId,
               ou.block_id as ou_blockId,
               orb.block_name as ou_blockName,
               orb.unit_type as ou_unitType,
               orb.storage_id as ou_storageId,
               orb.user_id as ou_userId,
               su.user_name as ou_userName,
               orb.creation_time as ou_creationTime,
               orb.block_status as ou_blockState,
               orb.usage_state as ou_usageState,
               ou.del_flag as ou_delFlage,
               ou.created_by as ou_createdBy,
               ou.created_time as ou_createdTime,
               ou.updated_by as ou_updateBy,
               ou.updated_time as ou_updatedTime
        from oa_usage ou
                 left join oa_reference_block orb on ou.block_id = orb.block_id
                 left join sys_user su on orb.user_id = su.user_id
    </select>



</mapper>